# small floor with 2 triangles w/texture coords

push

translate 0 -1 -4
scale 6 6 6
rotate 90  1 0 0
translate -0.5 -0.5 0

begin
texture_coord 0 0
vertex  0 0 0
texture_coord 0 1
vertex  0 1 0
texture_coord 1 0
vertex   1 0 0
end

begin
texture_coord 1 0
vertex  1 0 0
texture_coord 1 1
vertex  1 1 0
texture_coord 0 1
vertex  0 1 0
end

pop
