# a spotlight (with sharp edges) illuminating a square

fov 60
point_light 0 0 0  0.2 0.2 0.2
spotlight 0 0 0   0 0 -1   30 30   1 1 1
background 0.3 0.3 0.7

diffuse   0.8 0.8 0.8   0 0 0

# a square that is perpendicular to the view direction

begin
vertex  -8 -8 -8
vertex  -8  8 -8
vertex   8 -8 -8
end

begin
vertex   8 -8 -8
vertex   8  8 -8
vertex  -8  8 -8
end


write old_t03.png
