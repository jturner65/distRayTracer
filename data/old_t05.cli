# a sphere sitting on the ground, illuminated by spotlight

fov 60
point_light 0 0 0  0.2 0.2 0.2
spotlight 4 4 0   -1 -1 -1   10 20   1 1 1
background 0.3 0.3 0.7

diffuse   0.8 0.8 0.8   0 0 0

sphere  1  0 0 -4

begin
vertex  -8 -1 -8
vertex  -8 -1  8
vertex   8 -1 -8
end

begin
vertex   8 -1 -8
vertex   8 -1  8
vertex  -8 -1  8
end

write old_t05.png
